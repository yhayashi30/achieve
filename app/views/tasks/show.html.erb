<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p id="notice"><%= notice %></p>
    <p class="left">
      <strong>ユーザ:</strong>
      <%= @task.user.name %>
    </p>
    <p class="left">
      <strong>タイトル:</strong>
      <%= @task.title %>
    </p>
    <p class="left">
      <strong>内容:</strong>
      <%= @task.content %>
    </p>
    <p class="left">
      <strong>締め切り:</strong>
      <%= @task.deadline.strftime("%Y年%m月%d日　%H時%M分") %>
    </p>
    <p class="left">
      <strong>担当者:</strong>
      <%= @task.charge.name %>
    </p>
    <p class="left">
      <strong>ステータス:</strong>
      <%= @task.status %>
    </p>
    
    <%= link_to '修正', edit_task_path(@task), class: 'btn btn-default' %>
    <%= link_to '戻る', tasks_path, class: 'btn btn-default' %>
  </div>
</div>

