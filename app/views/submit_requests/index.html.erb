<div class="container">
  <div class="wrapper col-md-10 col-md-offset-1 col-sm-10">
    <p id="notice"><%= notice %></p>
    
    <h1>タスク依頼一覧</h1>
    <%= link_to 'タスク依頼', new_submit_request_path, class: 'btn btn-default' %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ユーザ</th>
          <th>タスク</th>
          <th>メッセージ</th>
          <th>依頼ユーザ</th>
          <th>ステータス</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @submit_requests.each do |submit_request| %>
          <tr>
            <td><%= submit_request.user.name %></td>
            <td><%= submit_request.task.title %></td>
            <td><%= submit_request.message %></td>
            <td><%= submit_request.request_user.name %></td>
            <td><%= submit_request.status %></td>
            <td><%= link_to '照会', submit_request %></td>
            <td><%= link_to '修正', edit_submit_request_path(submit_request) %></td>
            <td><%= link_to '削除', submit_request, method: :delete, data: { confirm: '本当に削除していいですか?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
